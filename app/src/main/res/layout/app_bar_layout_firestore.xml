<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/app_bar_layout_firestore"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/green"
        >
        <TextView
            android:id="@+id/appbar_text"
            android:layout_width="170dp"
            android:layout_height="match_parent"
            android:text="Whats Up"
            android:textSize="20dp"
            android:gravity="center|start"
            android:paddingLeft="20dp"
            android:textColor="@color/white"
            />
        <ImageButton
            android:id="@+id/appbar_searchbtn"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:src="@drawable/menu_search"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:gravity="center|end"
            android:background="@android:color/transparent"
            />


    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/relative_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="10dp"
        android:translationZ="90dp"
        android:gravity="center">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/circle_image_client1"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_gravity="center"

            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"
            android:src="@color/white"
            />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/appbar_circle_image"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_gravity="center"


            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"
            android:src="@drawable/smart_shop"
            />

    </RelativeLayout>
    <LinearLayout
        android:id="@+id/appbar_linear_search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"

        android:layout_below="@+id/relative_image"
        android:orientation="horizontal">
        <EditText
            android:id="@+id/appbar_search_edit"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="Search Your Conversation..."
            android:background="@drawable/border_input"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:padding="4dp"
            android:layout_weight="1"
            />
        <ImageButton
            android:id="@+id/appbar_cancelbtn"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/ic_baseline_cancel_24"
            android:background="@android:color/transparent"
            android:layout_gravity="center"
            android:layout_marginRight="10dp"

            />
    </LinearLayout>

</RelativeLayout>