<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.NewCampaignActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:text="Campaign Name"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:textColor="#000000"/>
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:boxBackgroundColor="#ffffff"
                        android:background="#ffffff">
                        <EditText
                            android:id="@+id/edittext_campaignName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="text"
                            android:padding="4dp"/>
                    </com.google.android.material.textfield.TextInputLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <LinearLayout
                        android:weightSum="8"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_weight="5"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:text="Recipients"
                            android:textStyle="bold"
                            android:textSize="15sp"
                            android:textColor="#000000"/>
                        <Button
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:padding="6dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginRight="10dp"
                            android:text="E"
                            android:textSize="16sp"/>
                        <Button
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:padding="6dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginRight="10dp"
                            android:text="P"
                            android:textSize="16sp"/>
                        <Button
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:padding="6dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginRight="10dp"
                            android:text="C"
                            android:textSize="16sp"/>
                    </LinearLayout>
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:boxBackgroundColor="#ffffff"
                        android:background="#ffffff">
                        <EditText
                            android:id="@+id/edittext_recipients"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:lines="3"
                            android:padding="4dp"/>
                        <TextView
                            android:id="@+id/text_count_valid_num"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="15dp"
                            android:text="0"
                            android:textColor="@color/black"
                            android:layout_gravity="end" />
                    </com.google.android.material.textfield.TextInputLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="Message"
                        android:textStyle="bold"
                        android:textSize="15sp"
                        android:textColor="#000000"/>
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:counterEnabled="true"
                        app:counterMaxLength="160"
                        app:counterTextColor="@color/black"
                        app:boxBackgroundColor="#ffffff"
                        android:background="#ffffff">
                        <EditText
                            android:id="@+id/edittext_message"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:lines="3"
                            android:maxLength="160"
                            android:padding="4dp"/>
                    </com.google.android.material.textfield.TextInputLayout>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="Campaign Start"
                        android:textStyle="bold"
                        android:textSize="15sp"
                        android:textColor="#000000"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:id="@+id/linear_date_from"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:layout_marginLeft="4dp"
                        android:layout_marginRight="4dp"
                        android:background="@drawable/background"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/text_date"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginLeft="4dp"
                            android:gravity="center"
                            android:text="dd/mm/yyyy "
                            android:padding="5dp"
                            android:textSize="16dp"
                            android:textStyle="bold" />
                        <ImageButton
                            android:id="@+id/imagebtn_datePicker"
                            android:layout_width="40dp"
                            android:layout_height="match_parent"
                            android:src="@drawable/ic_baseline_date_range_24"
                            android:background="@android:color/transparent"
                            />

                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/linear_date_to"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:layout_marginLeft="4dp"
                        android:layout_marginRight="4dp"
                        android:background="@drawable/background"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/text_time"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="21:30:59"
                            android:gravity="center"
                            android:textSize="16dp"
                            android:padding="5dp"
                            android:textStyle="bold" />

                        <ImageButton
                            android:id="@+id/imagebtn_TimePicker"
                            android:layout_width="40dp"
                            android:layout_height="match_parent"
                            android:src="@drawable/ic_baseline_access_time_24"
                            android:background="@android:color/transparent"
                            />
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="20dp"
                    android:orientation="vertical">
                    <Button
                        android:id="@+id/expandableButton"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:background="#9c27b0"
                        android:drawableRight="@android:drawable/arrow_down_float"
                        android:paddingRight="10dp"
                        android:text="Advanced"
                        android:textColor="#fff" />

                    <com.github.aakira.expandablelayout.ExpandableRelativeLayout
                        android:id="@+id/expandableLayout"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_below="@+id/expandableButton"
                        android:background="@drawable/expandable_layout_border"
                        android:padding="10dp"
                        app:ael_duration="400"
                        app:ael_expanded="false"
                        app:ael_interpolator="accelerate"
                        app:ael_orientation="vertical">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textSize="15sp"
                                android:textStyle="bold"
                                android:textColor="#000000"
                                android:text="Select API Type"/>
                            <RadioGroup
                                android:id="@+id/radioGroup"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">
                                <RadioButton
                                    android:layout_width="match_parent"
                                    android:layout_height="30dp"
                                    android:id="@+id/radio_regular_api"
                                    android:checked="true"
                                    android:textColor="#000000"
                                    android:buttonTint="@color/colorPrimary"
                                    android:text="Regular API">
                                </RadioButton>
                                <RadioButton
                                    android:layout_width="match_parent"
                                    android:layout_height="30dp"
                                    android:id="@+id/radio_turtle_api"
                                    android:textColor="#000000"
                                    android:buttonTint="@color/colorPrimary"
                                    android:text="Turtle API">
                                </RadioButton>
                            </RadioGroup>
                            <LinearLayout
                                android:weightSum="8"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">
                                <TextView
                                    android:layout_weight="7"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:text="Extra Recipient"
                                    android:textColor="#000000"
                                    android:textStyle="bold"
                                    android:textSize="15sp" />
                                <Button
                                    android:layout_weight="1"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:padding="6dp"
                                    android:text="C"
                                    android:textColor="#ffffff"
                                    android:textSize="16sp"/>
                            </LinearLayout>
                            <com.google.android.material.textfield.TextInputLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                app:boxBackgroundColor="#ffffff"
                                android:background="#ffffff">
                                <EditText
                                    android:id="@+id/edittext_extra_recipients"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:padding="4dp"/>
                            </com.google.android.material.textfield.TextInputLayout>
                            <CheckBox
                                android:id="@+id/checkbox"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:onClick="itemClicked"
                                android:textColor="#000000"
                                android:buttonTint="@color/colorPrimary"
                                android:text="Save as Template" />
                        </LinearLayout>
                    </com.github.aakira.expandablelayout.ExpandableRelativeLayout>
                </LinearLayout>
                <Button
                    android:id="@+id/btn_save"
                    android:layout_width="110dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="30dp"
                    android:layout_gravity="center"
                    android:textSize="18sp"
                    android:text="Save"/>
            </LinearLayout>
        </RelativeLayout>
    </ScrollView>

</RelativeLayout>