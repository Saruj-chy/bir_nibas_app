<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FireInboxShow.activity.FireStoreUserActivity">


    <include
        layout="@layout/app_bar_layout_firestore"
        android:id="@+id/app_bar_layout_firestore"/>




    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/app_bar_layout_firestore"
        >

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/user_chat_recyclerview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />



    </RelativeLayout>
    <ProgressBar
        android:id="@+id/progress_user_firestore"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:visibility="gone"
        android:layout_alignParentBottom="true"
        />


</RelativeLayout>