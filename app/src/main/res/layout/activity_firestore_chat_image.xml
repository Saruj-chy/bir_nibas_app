<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".FireInboxShow.activity.FirestoreChatImageActivity">

    <include
        layout="@layout/app_bar_layout_tranparent"
        android:id="@+id/appbar_chat_image"

        />

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/view_pager_chat_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/appbar_chat_image"
        >

    </androidx.viewpager.widget.ViewPager>

</RelativeLayout>