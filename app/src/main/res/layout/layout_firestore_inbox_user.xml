<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    xmlns:app="http://schemas.android.com/apk/res-auto">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"


        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"


        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <RelativeLayout
                android:id="@+id/relative_image_part"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                >

                <RelativeLayout
                    android:id="@+id/relative_image"
                    android:layout_width="85dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="10dp"

                    >
                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/image_user"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_gravity="center"


                        android:src="@drawable/profile_image"
                        />


                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:gravity="center"
                    android:layout_centerVertical="true"

                    android:layout_toEndOf="@+id/relative_image"
                    android:layout_toRightOf="@+id/relative_image">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        >
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginTop="5dp"

                            >
                            <TextView
                                android:id="@+id/text_user_name"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Sarose Datta"
                                android:textColor="@color/green"
                                android:textSize="18dp"

                                android:gravity="center|start"
                                android:textStyle="bold"
                                android:justificationMode="inter_word"

                                />

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/text_user_name"
                                android:orientation="horizontal">
                                <ImageButton
                                    android:id="@+id/imgbtn_active"
                                    android:layout_width="10dp"
                                    android:layout_height="wrap_content"
                                    android:paddingTop="5dp"

                                    android:src="@drawable/ic_brightnes_24"
                                    android:background="@android:color/transparent"
                                    />
                                <TextView
                                    android:id="@+id/text_user_status"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center|start"
                                    android:layout_marginLeft="10dp"

                                    android:text="Hey, bro. I am available "
                                    android:justificationMode="inter_word"
                                    android:textStyle="bold|italic"
                                    android:paddingLeft="10dp"
                                    android:paddingEnd="5dp"
                                    android:textColor="@color/holo_green"
                                    android:textSize="14dp"
                                    android:layout_marginBottom="10dp"
                                    android:layout_weight="1"
                                    android:paddingRight="5dp" />
                                <TextView
                                    android:id="@+id/text_user_last_time"
                                    android:layout_width="60dp"
                                    android:layout_height="wrap_content"
                                    android:gravity="start|bottom"
                                    android:layout_alignParentRight="true"
                                    android:layout_below="@+id/text_user_status"

                                    android:text="5:55 pm"
                                    android:textStyle="bold|italic"
                                    android:paddingLeft="10dp"
                                    android:textColor="@color/holo_green"
                                    android:textSize="10dp"
                                    android:layout_marginBottom="10dp"

                                    />
                            </RelativeLayout>


